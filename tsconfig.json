{
  "compilerOptions": {
    "moduleResolution": "Node", // for tsc types resolve
    "target": "ES2017",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "module": "ES6", // export as ES6 module for vite resolve
    // "target": "ES6", // transform to ES6 code for vite resolve
  },
  "exclude": ["node_modules", "dist", "public"]
}